<h5 class="mat-h5">Checked changed event</h5>

<DemoContainer>
    <Content>
        <MatSwitch TValue="bool" Label="Switch" ValueChanged="@(e=>Toggle(e))"></MatSwitch>
        
        @code{
            private void Toggle(bool toggled)
            {
                if (toggled)
                {
                    Console.WriteLine("Toggle true");
                }
                else
                {
                    Console.WriteLine("Toggle false");
                }
            }
        }
    </Content>
    <SourceContent>
    	<BlazorFiddle Template="MatBlazor" Code=@(@"
        <MatSwitch TValue=""bool"" Label=""Switch"" ValueChanged=""@(e=>Toggle(e))""></MatSwitch>
        
        @code{
            private void Toggle(bool toggled)
            {
                if (toggled)
                {
                    Console.WriteLine(""Toggle true"");
                }
                else
                {
                    Console.WriteLine(""Toggle false"");
                }
            }
        }
    ")></BlazorFiddle>
    </SourceContent>
</DemoContainer>