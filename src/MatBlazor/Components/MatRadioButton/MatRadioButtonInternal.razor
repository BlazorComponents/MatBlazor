@namespace MatBlazor
@typeparam TValue
@inherits BaseMatRadioButtonInternal<TValue>


<div class="mdc-form-field" @ref="FormFieldRef" Id="@Id">
    <div class="@ClassMapper.AsString()" style="@StyleMapper.AsString()" @ref="Ref">
        <input class="mdc-radio__native-control" type="radio" name="@(Group.GroupName ?? Group.Id)" checked="@Checked" value="@ValueAsString"
               @onchange="((e) => OnChangeHandler(e))" id="@InputId" disabled=@Disabled @attributes="Attributes"/>
        <div class="mdc-radio__background">
            <div class="mdc-radio__outer-circle"></div>
            <div class="mdc-radio__inner-circle"></div>
        </div>
        <div class="mdc-radio__ripple"></div>
    </div>
    @if (Label != null || @ChildContent != null)
    {
        <label for="@InputId">@Label@ChildContent</label>
    }
</div>